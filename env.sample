# ./.env (Project Root)
NODE_ENV=development

# Postgres Config
POSTGRES_DB=notifications_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_PORT=5432 # Optional: Port mapping for host access

# RabbitMQ Config (used implicitly by services)
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASS=password

# API Config
API_PORT=3000

# Slack Connector Config
# --- IMPORTANT: Get your Slack Bot Token ---
# 1. Go to api.slack.com/apps
# 2. Create a New App or use an existing one.
# 3. Go to "OAuth & Permissions" sidebar.
# 4. Under "Bot Token Scopes", add the `chat:write` scope.
# 5. Install the app to your workspace (or re-install if scopes changed).
# 6. Copy the "Bot User OAuth Token" (starts with xoxb-) here.
SLACK_BOT_TOKEN=xoxb-
# Add other service tokens/keys later
# TELEGRAM_BOT_TOKEN=...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=...
# SENDGRID_API_KEY=...